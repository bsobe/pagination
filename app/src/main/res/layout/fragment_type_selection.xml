<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/btnPagination"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/holo_orange_dark"
		android:minWidth="@dimen/min_button_width"
		android:text="@string/google_pagination"
		android:textColor="@android:color/white"
		app:layout_constraintBottom_toTopOf="@id/btnEndlessScrollListener"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/btnEndlessScrollListener"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/holo_blue_dark"
		android:minWidth="@dimen/min_button_width"
		android:text="@string/endless_scroll_listener"
		android:textColor="@android:color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/btnPagination" />

</androidx.constraintlayout.widget.ConstraintLayout>